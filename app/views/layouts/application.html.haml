%html{lang: "es"}
  %head

    = favicon_link_tag "#{asset_path('favicon.ico')}"
    = favicon_link_tag "#{asset_path('favicon.ico')}", rel: 'apple-touch-icon', type: 'image/png'

    %title= content_for?(:page_title) ? yield(:page_title) : "En 1 mes"


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

    / Optional theme
    %link{href: "https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css", rel: "stylesheet"}/

    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = include_gon

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,700' rel='stylesheet' type='text/css'>

    :css
      h1, h2, label{
        font-family: 'Roboto Slab', serif;
      }


    - if Rails.env.production?
      = render 'layouts/analytics'

    = render 'shared/twitter_card'

    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <meta content="Un taller paso a paso para aprender ruby on rails en menos de un mes" name="description">

    = yield :javascript

    <link href='https://fonts.googleapis.com/css?family=Lato:400,700,900' rel='stylesheet' type='text/css'>


  %body{:style => "padding-top:0px"}
    = render 'shared/navbar'


    .wrapper{:style => 'text-align:center'}
      - flash.each do |name, msg|
        = content_tag(:div, msg, class: "alert alert-#{name}")

    = yield

    = render 'layouts/footer'

