.container
  .row
    .col-md-12
      %h1= @workshop.name


      %h5= @workshop.description

      =raw(@workshop.content.html_safe)
      .buttons{:style => 'margin-top:20px'}
        .pull-left   
          .btn.btn-primary
            = link_to(" <span class='glyphicon glyphicon-backward'>  </span>   Anterior".html_safe, course_chapter_workshop_path(@workshop.chapter.course, @workshop.chapter, @workshop.previous_workshop), :style =>'color:white') if @workshop.previous_workshop
        .pull-right
          .btn.btn-primary
            = link_to("Siguiente   <span class='glyphicon glyphicon-forward'>  </span>".html_safe, course_chapter_workshop_path(@workshop.chapter.course, @workshop.chapter, @workshop.next_workshop), :style =>'color:white') if @workshop.next_workshop 


.container{:style => 'margin-top:20px'}
  .row
    .col-md-12
      #disqus_thread
      :javascript
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'onemonth'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
      %noscript
        Please enable JavaScript to view the
        %a{href: "http://disqus.com/?ref_noscript"} comments powered by Disqus.
      %a.dsq-brlink{href: "http://disqus.com"}
        comments powered by
        %span.logo-disqus Disqus

